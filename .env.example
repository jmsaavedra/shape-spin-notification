# Required: Your wallet private key for signing transactions
PRIVATE_KEY=your_private_key_here

# Optional but HIGHLY RECOMMENDED: Secret for securing cron endpoints
# Generate a strong random string (e.g., using: openssl rand -base64 32)
# Add this to your Vercel environment variables
CRON_SECRET=your_cron_secret_here

# LoopMessage API credentials (optional - for iMessage notifications)
# Get these from https://loopmessage.com
LOOPMESSAGE_AUTH_KEY=XXXXXXXX-XXXXXXXX-XXXXXXXX-XXXXXXXX
LOOPMESSAGE_SECRET_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
LOOPMESSAGE_SENDER_NAME=Spin Shape

# Phone number to receive notifications (with country code, e.g., +1234567890)
NOTIFICATION_NUMBER=+1234567890
