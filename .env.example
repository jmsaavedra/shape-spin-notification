# Required: Public wallet address to check spins for (0x...)
PUBLIC_ADDRESS=0x0000000000000000000000000000000000000000

# LoopMessage API credentials (optional - for iMessage notifications)
# Get these from https://loopmessage.com
LOOPMESSAGE_AUTH_KEY=XXXXXXXX-XXXXXXXX-XXXXXXXX-XXXXXXXX
LOOPMESSAGE_SECRET_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
LOOPMESSAGE_SENDER_NAME="Shape Medal Spin Notifier"

# Phone number to receive notifications (with country code, e.g., +1234567890)
NOTIFICATION_NUMBER=+1234567890

# When sending iMessge: Use MetaMask mobile deep link (true) or regular Shape Network URL (false)
# Set to true if you primarily access from mobile devices with MetaMask installed
# Set to false for desktop users or if you prefer phone's default browser
USE_METAMASK_MOBILE_DEEPLINK=false

# Alchemy API key for reliable RPC access (optional but recommended)
# Get your free key at https://www.alchemy.com
# Without this, the app will use the public endpoint which may be rate-limited
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Cron job interval in minutes (how often to check for spin availability)
# Must be a divisor of 60 (1, 2, 3, 4, 5, 6, 10, 12, 15, 20, 30, 60)
CRON_INTERVAL_MINUTES=10

