{
  "functions": {
    "api/cron.js": {
      "maxDuration": 30
    },
    "api/update-global-medals.js": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/update-global-medals",
      "schedule": "0 * * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/(0x[a-fA-F0-9]{40})",
      "destination": "/wallet.html"
    },
    {
      "source": "/([a-zA-Z0-9-]+\\.eth)",
      "destination": "/wallet.html"
    }
  ]
}